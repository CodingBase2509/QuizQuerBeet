<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="QuizQuerBeet.Views.Templates.MainPage.NavigationButton">
    <Frame
        MinimumHeightRequest="130"
        MaximumHeightRequest="160"
        MinimumWidthRequest="130"
        MaximumWidthRequest="160"
        CornerRadius="25"
        Padding="10"
        BorderColor="{StaticResource Primary}"
        BackgroundColor="{StaticResource Primary}">

        <Grid>
            <Button
                BindingContext="{x:Reference this}"
                ZIndex="2"
                BackgroundColor="Transparent"
                Command="{Binding Command}"
                CommandParameter="{Binding CommandParameter}">

                <Button.Shadow>
                    <Shadow
                        Brush="{StaticResource PrimaryColorBrush}"
                        Offset="3,5"
                        Radius="5"
                        Opacity="0.4"/>
                </Button.Shadow>
            </Button>

            <Label
                ZIndex="1"
                BindingContext="{x:Reference this}"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                Style="{StaticResource LargeLabelDefault}"
                Text="{Binding Text}"/>
        </Grid>

    </Frame>
</ContentView>

