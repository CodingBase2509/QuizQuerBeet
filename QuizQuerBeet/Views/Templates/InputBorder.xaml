<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizQuerBeet.Views.Templates.InputBorder">

    <ContentView.ControlTemplate>
        <ControlTemplate>

            <Border
                Margin="0"
                Padding="0"
                Stroke="{StaticResource Primary}"
                BackgroundColor="{StaticResource TextLight}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>

                <ContentPresenter
                    Margin="3,0"
                    Padding="0"/>

            </Border>

        </ControlTemplate>
    </ContentView.ControlTemplate>

</ContentView>

