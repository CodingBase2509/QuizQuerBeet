<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#242730</Color>
    <Color x:Key="Secondary">#A7DFF1</Color>
    <Color x:Key="SecondaryVariant">#8EB1C6</Color>

    <Color x:Key="TextLight">#E1E2E3</Color>
    <Color x:Key="TextDark">#242730</Color>

    <Color x:Key="Error">#8B2222</Color>
    <Color x:Key="Okay">#296524</Color>

    <LinearGradientBrush x:Key="BackgroundBrush"
                         StartPoint="0.7,-0.1"
                         EndPoint="0.2,1">
        <GradientStop Color="#D474A8B9"
                      Offset="0"/>
        <GradientStop Color="#D68D91B3"
                      Offset="2.8"/>
        <GradientStop Color="#E0B974AE"
                      Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecVariantColorBrush" Color="{StaticResource SecondaryVariant}"/>

</ResourceDictionary>
