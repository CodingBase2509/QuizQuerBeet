	  <None Remove="Resources\Images\quit.svg" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="CommunityToolkit.Mvvm" Version="8.0.0" />
	</ItemGroup>
	<ItemGroup>
	  <MauiImage Include="Resources\Images\arrowleft.svg" />
	  <MauiImage Include="Resources\Images\arrowright.svg" />
