<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuizQuerBeet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:QuizQuerBeet.Views"
    xmlns:qqb="clr-namespace:QuizQuerBeet"
    x:DataType="qqb:AppShell"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Style="{StaticResource ShellDefault}">

    <TabBar
        Style="{StaticResource TabbarDefault}">
        <Tab x:Name="QuizTab"
             Icon="category"
             Title="Kategorien">
            <ShellContent
                ContentTemplate="{DataTemplate views:CategorieView}"
                Route="categories"/>
        </Tab>
        <Tab x:Name="StartTab"
             Icon="home"
             Title="Start">
            <ShellContent
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="mainPage"/>
        </Tab>
        <Tab x:Name="StatisticTab"
             Icon="statistic"
             Title="Statistik">
            <ShellContent
                ContentTemplate="{DataTemplate views:Statistics}"
                Route="statistics"/>
        </Tab>
    </TabBar>
</Shell>
